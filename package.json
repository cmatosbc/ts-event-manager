{
  "name": "ts-event-manager",
  "version": "1.4.0",
  "description": "A TypeScript event listener manager with intersection observer and automatic cleanup",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "readme": "README.md",
  "scripts": {
    "build": "tsc",
    "test:unit": "jest",
    "test:e2e": "playwright test",
    "test": "npm run test:unit && npm run test:e2e",
    "test:ui": "pnpm run build && playwright test --ui",
    "serve": "pnpm http-server . -p 3000",
    "prepare": "npm run build",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "typescript",
    "event-listener",
    "intersection-observer",
    "dom",
    "events"
  ],
  "author": "Carlos Artur Matos",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.49.1",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "playwright": "^1.49.1",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cmatosbc/ts-event-manager.git"
  },
  "bugs": {
    "url": "https://github.com/cmatosbc/ts-event-manager/issues"
  },
  "homepage": "https://github.com/cmatosbc/ts-event-manager#readme"
}
